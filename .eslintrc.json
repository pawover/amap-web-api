{
  "root": true,
  "extends": ["pawover", "pawover/typescript"],
  "overrides": [
    {
      "files": ["libs/react/**"],
      "extends": ["pawover", "pawover/typescript", "pawover/react", "plugin:react-hooks/recommended"],
      "parserOptions": {
        "project": "./tsconfig.react.json"
      },
      "rules": {
        "no-case-declarations": ["off"],
        // typescript
        "@typescript-eslint/no-explicit-any": ["off"],
        // react
        "react-refresh/only-export-components": ["off"],
        "react/no-unknown-property": ["off"],
        "react/no-unstable-nested-components": ["off"]
      }
    },
    {
      "files": ["libs/vue/**"],
      "extends": ["pawover", "pawover/typescript", "pawover/vue"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": {
          "js": "@babel/eslint-parser",
          "jsx": "@babel/eslint-parser",
          "ts": "@typescript-eslint/parser",
          "tsx": "@typescript-eslint/parser"
        },
        "project": "./tsconfig.vue.json"
      }
    },
    {
      "files": ["libs/types/**"],
      "extends": ["pawover", "pawover/typescript"],
      "parserOptions": {
        "project": "./tsconfig.types.json"
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": ["off"],
        "@typescript-eslint/no-unused-vars": ["off"],
        "@typescript-eslint/triple-slash-reference": ["off"]
      }
    },
    {
      "files": ["packages/**/**"],
      "extends": ["pawover", "pawover/typescript"],
      "parserOptions": {
        "project": "./tsconfig.packages.json"
      }
    }
  ]
}
